    left: 0;
    width: 100%;
    padding-left: 5px;
    padding-top: 40px;
} 
.sidebar ul li{
    position: relative;
    list-style: none;
    width: 100%;
    border-radius: 20px 0 0 20px;
}
.sidebar ul li:hover{
    background: var(--sidebar_item_hover);
}
.sidebar ul li.active{
    background: var(--sidebar_selected_item);
}

