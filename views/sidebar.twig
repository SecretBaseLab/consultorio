        backdrop-filter: blur(var(--blur_cristal_mode));
    transition: width 0.2s;

    overflow-x: hidden;
}  
 .sidebar::-webkit-scrollbar {
   display: none;
}
.sidebar.active{    /*pa volver a mostrar el menu*/
    width: 250px;
}
.sidebar ul{
    /* position: absolute; */
